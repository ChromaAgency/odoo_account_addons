<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_tax_form" model="ir.ui.view">
        <field name="name">account.tax.view.form.inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_scope']" position="after">
                <field name="untaxed_amount" />
            </xpath>
            <xpath expr="//field[@name='amount_type']" position="after">
                <field name="withholding_scale" attrs="{'invisible':[('amount_type','!=','withholding_scale')]}"/>
            </xpath>
        </field>
    </record>


</odoo>
