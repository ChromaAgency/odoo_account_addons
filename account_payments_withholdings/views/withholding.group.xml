<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_withholding_group_form" model="ir.ui.view">
        <field name="name">account.withholding.group.form</field>
        <field name="model">account.withholding.group</field>
        <field name="arch" type="xml">
            <form string="Grupos">
                <sheet>
                    <group>
                        <field name="name" string="Nombre del grupo"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <field name="group_lines"  mode="tree">
                        <tree editable="bottom" string="Valores de la escala" default_order="sequence, id">
                            <field name="sequence" invisible="1"/>
                            <field name="group_ref" />
                            <field name="group_amount" widget="percentage"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_withholding_group_tree" model="ir.ui.view">
        <field name="name">account.withholding.group.tree</field>
        <field name="model">account.withholding.group</field>
        <field name="arch" type="xml">
            <tree string="Grupos">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="action_withholding_group" model="ir.actions.act_window">
        <field name="name">Grupos</field>
        <field name="res_model">account.withholding.group</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_withholding_group" name="Grupos de Retenciones" parent="account.account_account_menu" action="action_withholding_group" sequence="10"/>
</odoo>
