<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_currency_invoicing" model="ir.ui.view">
        <field name="name">repair.view_repair_order_form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="invoicing_currency" string="Moneda de facturacion"/>
            </xpath>
        </field>
    </record>

</odoo>
