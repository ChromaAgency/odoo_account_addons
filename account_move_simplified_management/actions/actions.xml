<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_account_journal_view_kanban_simplified_management" model="ir.actions.act_window">
        <field name="name" >Caja Simplificada</field>
        <field name="view_mode">kanban</field>
        <field name="res_model">account.journal</field>
        <field name="target">current</field>
        <field name="domain" eval="['|', ('type', '=', 'bank'),('type', '=', 'cash')]" />
        <field name="view_id" ref="account_move_simplified_management.account_journal_view_kanban_simplified_management"/>
    </record>
    <record id="action_account_move_line_view_list_simplified_management" model="ir.actions.act_window">
        <field name="name" >Movimientos</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">account.move.line</field>
        <field name="target">current</field>
        <field name="view_id" ref="account_move_simplified_management.account_move_line_view_tree_simplified"/>
    </record>
    <record id="action_account_add_move_view_form_simplified_management" model="ir.actions.act_window">
        <field name="name" >Movimientos</field>
        <field name="view_mode">form</field>
        <field name="res_model">account.move.simplified</field>
        <field name="target">new</field>
        <field name="view_id" ref="account_move_simplified_management.account_move_simplified_view_form"/>
    </record>
    <record id="action_account_view_payment" model="ir.actions.act_window">
        <field name="name" >Pago</field>
        <field name="view_mode">form</field>
        <field name="res_model">account.payment</field>
        <field name="target">current</field>
    </record>
        <record id="action_show_account_move_simplified_types" model="ir.actions.act_window">
        <field name="name" >Tipos de movimientos</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">account.move.simplified.type</field>
        <field name="target">current</field>
    </record>
</odoo>
