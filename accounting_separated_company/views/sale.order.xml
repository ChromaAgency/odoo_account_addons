<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_accounting_separated_company" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <group name="partner_details">
                <field name="copied_sale_order_name" groups="base.group_no_one"/>
                <field name="copied_sale_order_name" invisible="1"/>
                <field name="accounting_company_id" attrs="{'readonly':[('copied_sale_order_name','!=',False), ('state','in',['sale','done'])]}"/>
            </group>
        </field>
    </record>

</odoo>
