<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="currency_conversion_payment_wizard_action" model="ir.actions.act_window">
        <field name="name">Conversion de moneda</field>
        <field name="res_model">res.currency.conversion.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <h1>Conversion de monedas</h1>
            <p>Accion que creara un popup para la conversion de monedas en los pagos</p>
        </field>
    </record>

    <record id="currency_conversion_payment_wizard_view_form" model="ir.ui.view">
        <field name="name">currency.conversion.invoice.wizard.view.form</field>
        <field name="model">res.currency.conversion.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="source_currency" />
                        <field name="target_currency" domain="[('id','!=',source_currency)]"/>
                        <field name="exchange_rate" />
                    </group>
                </sheet>
                <footer>
                    <button string="Convertir" name="confirm" context="{'update_company_exchange_rate':True}" type="object" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="currency_conversion_invoice_wizard_action" model="ir.actions.act_window">
        <field name="name">Conversion de moneda</field>
        <field name="res_model">res.currency.conversion.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="currency_conversion_invoice_wizard_view_form" model="ir.ui.view">
        <field name="name">currency.conversion.invoice.wizard.view.form</field>
        <field name="model">res.currency.conversion.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="source_currency" />
                        <field name="target_currency" domain="[('id','!=',source_currency)]"/>
                        <field name="exchange_rate" />
                    </group>
                </sheet>
                <footer>
                    <button string="Convertir y guardar tipo de cambio" name="confirm" context="{'update_company_exchange_rate':True}" type="object" class="oe_highlight"/>
                    <button string="Convertir solo para esta factura" name="confirm" context="{'update_company_exchange_rate':False}" type="object" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
