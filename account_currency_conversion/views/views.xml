<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_account_currency_conversion" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <button string="Convertir Moneda" name="action_convert_currency" type="object" class="oe_highlight"/> 
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="replace">
                <label for="currency_id" />
                <div class="oe_inline">
                    <field name="currency_id" />
                    <span>
                        TC
                        <field name="exchange_rate" />
                    </span>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_payment_form_inherit_account_currency_conversion" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <button string="Convertir Moneda" name="action_convert_currency" type="object" class="oe_highlight"/> 
                <field string="Tipo de cambio actual" name="exchange_rate" /> 
            </xpath>
        </field>
    </record>
</odoo>
