<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="partner_currency_invoicing">
        <field name="name">partner.currency.invoicing</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="before">
                <field name="invoicing_currency" invisible="company_type != 'company' and parent_id != False"/>
            </xpath>
        </field>
    </record>
</odoo>
