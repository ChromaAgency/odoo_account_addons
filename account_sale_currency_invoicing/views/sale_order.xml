<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_currency_invoicing" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_condition_id']" position="before">
                <field name="invoicing_currency" string="Moneda de facturacion nueva"/>
            </xpath>

        </field>
    </record>

</odoo>
