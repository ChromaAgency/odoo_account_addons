<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_inherit_account_checks" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="communication" position="after">
                <field name="check_number" attrs="{'invisible':['|',('journal_id.inbound_payment_method_ids','!=','checks'),('journal_id.outbound_payment_method_ids','!=','checks')]}"/>
                <field name="check_date" attrs="{'invisible':['|',('journal_id.inbound_payment_method_ids','!=','checks'),('journal_id.outbound_payment_method_ids','!=','checks')]}"/>
                <field name="issuing_bank" attrs="{'invisible':['|',('journal_id.inbound_payment_method_ids','!=','checks'),('journal_id.outbound_payment_method_ids','!=','checks')]}"/>
            </field>
        </field>
    </record>

</odoo>
