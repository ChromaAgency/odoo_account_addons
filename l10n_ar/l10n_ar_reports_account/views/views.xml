<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_group_view_form_inherit_l10n_ar_reports_account" model="ir.ui.view">
        <field name="name">account.payment.group.view.form.inherit</field>
        <field name="model">account.payment.group</field>
        <field name="inherit_id" ref="account_payments_group.account_payment_group_view_form" />
        <field name="arch" type="xml">
            <field name="payment_difference_handling" position="before">
                <field name="receipt_book_id" />
            </field>
            <field name="observations" position="before">
                <field name="payment_total_in_letters" />
            </field>
        </field>
    </record>
    <record id="view_move_form_inherit_l10n_ar_reports_account" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_latam_document_type_id']" position="after">
                <!-- #TODO dont use ids, use refs -->
                <field name="invoiced_amount_in_letters" attrs="{'invisible':[('l10n_latam_document_type_id','not in',[109,110,111,112,113,114,115,116,117])]}" />
                <field name="stock_picking_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('pt-5')]" position="attributes">
            <attribute name="class"></attribute>
        </xpath>
    </template>
</odoo>